<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingTop="5dp"
    android:layout_margin="3dp"
    android:paddingBottom="6dp"
    android:backgroundTint="#61C0FB"
    android:background="@drawable/background_project"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_project"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="Project name"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/projectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10.5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="1/1/2024 - 2/2/2024"
        android:textColor="#FF5722" />

    <TextView
        android:id="@+id/projectMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="6 member"
        android:textColor="#007CFF"
        android:textSize="11dp"
        android:textStyle="bold" />
</LinearLayout>
